{
  "manifest_version": 2,
  "name": "Skinner",
  "version": "0.1.4",

  "description": "Customize your Google+, Twitter or Facebook's visual appearence.",

  "icons": {
    "128": "icon.png"
  },

  "author": "XYYHun",

	"permissions": [
		"tabs",
    "storage",
    "unlimitedStorage",
    "https://plus.google.com/",
		"https://facebook.com/",
		"https://twitter.com/"
	],

  "background": {
    "scripts": [
      "./scripts/libs/jquery-3.1.1.min.js",
      "./scripts/libs/style-template.js",
      "./scripts/background.js"
    ]
  },

  "browser_action" : {
    "default_popup" : "popup.html"
  },

	"content_scripts": [
		{
			"matches": [
        "https://plus.google.com/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*"
      ],
			"run_at": "document_end",
			"all_frames": true,
			"js": ["./scripts/apply.js"]
		}
	]
}